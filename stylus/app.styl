@import 'stick/function'
@import 'stick/mixin'

@import 'jeet'
@import 'nib'

normalize-css()
base()

// edit()

.gs
  center(960px, 10px)

.half
  col(1/2)
  +below(768px)
    stack()
    margin-bottom 20px

.third
  col(1/3)
  +below(768px)
    stack()
    margin-bottom 20px

.two-third
  col(2/3)
  +below(768px)
    stack()
    margin-bottom 20px

.fourth
  col(1/4)
  +below(768px)
    stack()
    margin-bottom 20px

html, body
  margin 0
  padding 0

html
  monospace()
  color white
  background-color lightGray

// Media Box
.media
  display flex
  align-items flex-start

.media__figure
  margin-right 1em

.media__body
  flex 1

// User
.list
  cf()

.list-box
  span(1/3, cycle: 3)
  +below(960px)
    span(1/2, uncycle: 3, cycle: 2)
  +below(768px)
    stack()
  box-sizing border-box

.lista-box__content
  position relative
  margin 5px
  border-radius 5px
  padding 10px
  color white
  background-color rgba(#8ACBEB, 1)
  box-sizing border-box
  min-height: 165px
  +below(768px)
    min-height: auto

.list-box__figure
  width 100px
  height 100px
  border-radius 50%

button
  border 0
  background-color rgba(blue, 0.3)
  border-radius 5px
  color white
  margin 5px
  padding 5px

  &.remove
    color rgba(black, 0.8)
    position absolute
    right 0
    top 0
    background none

// Modal
duration = 0.45s

.modalLayout
  position fixed
  top 0
  right 0
  bottom 0
  left 0
  margin auto
  width 100%
  height 100%
  overflow hidden
  background-color rgba(red, 0.8)
  color white
  backface-visibility hidden
  will-change transform, visibility

  visibility hidden
  transform translateY(-100%)
  transition transform duration, visibility 0s duration

  display flex
  flex-direction column
  justify-content center
  align-items center

  &:focus
    outline none

.modalLayout--open
  visibility visible
  transform translate(0%)
  transition: transform duration

.modalLayout__figure
  width 150px
  height 150px
  border-radius 50%
  margin-bottom 10px